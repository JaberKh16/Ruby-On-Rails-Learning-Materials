<div class="container mt-5">
  <div class="row">
    <div class="col-12 border p-4 rounded-3 shadow-lg">
      <h3 class="mb-4 text-primary">Create New User</h3>

      <%# Error Messages %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(@user.errors.count, "error") %> prevented the save:</h5>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <form action="<%= user_create_path %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <div class="form-group mb-3">
          <label for="exampleInputName">Name</label>
          <input type="text" 
                 class="form-control" 
                 id="exampleInputName"
                 name="user[name]"
                 placeholder="Enter Name"
                 value="<%= @user.name %>">
        </div>

        <div class="form-group mb-3">
          <label for="exampleInputEmail1">Email</label>
          <input type="email" 
                 class="form-control" 
                 id="exampleInputEmail1"
                 name="user[email]"
                 placeholder="Enter email"
                 value="<%= @user.email %>">
        </div>

        <div class="form-group mb-3">
          <label for="exampleInputPassword">Password</label>
          <input type="password" 
                 class="form-control"
                 id="exampleInputPassword"
                 name="user[password]"
                 placeholder="Password">
        </div>

        <div class="form-group mb-3">
          <label for="exampleInputConfirmPassword">Confirm Password</label>
          <input type="password" 
                 class="form-control"
                 id="exampleInputConfirmPassword"
                 name="user[confirm_pass]"
                 placeholder="Confirm Password">
        </div>

        <div class="form-check mb-3">
          <input type="checkbox" 
                 class="form-check-input mr-3"
                 id="exampleInputActiveStatus"
                 name="user[is_active]"
                 value="1"
                 <%= @user.is_active? ? "checked" : "" %>>

          <label class="form-check-label" for="exampleInputActiveStatus">
            Status
          </label>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <%= link_to 'Back', user_index_path, class: "btn btn-secondary ms-2" %>
      </form>
    </div>
  </div>
</div>
