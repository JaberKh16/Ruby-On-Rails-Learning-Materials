<!-- FLASH MESSAGES -->
<div class="container mt-4">
    <% flash.each do |key, value| %>
    <div class="alert alert-<%= key == "alert" ? "danger" : "success" %> alert-dismissible fade show">
        <%= value %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    <% end %>
</div>