<p style="color: green"><%= notice %></p>

<%= render @product %>

<div class="mt-4 p-2 flex gap-2">
  <%= link_to "Edit this product", edit_product_path(@product), class: "button is-small is-warning" %> |
  <%= link_to "Back to products", products_path, class: "button is-small is-outlined" %>

  <%= button_to "Destroy this product", @product, method: :delete, class: "button is-small is-danger", 
  data: { confirm: "Are you sure?" } %>
</div>
