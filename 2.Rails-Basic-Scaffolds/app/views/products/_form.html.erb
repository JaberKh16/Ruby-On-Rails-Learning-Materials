<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="notification is-info">
    Please fill in the product details below.
  </div>


  <div class="control">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="control">
    <%= form.label :sku, style: "display: block" %>
    <%= form.text_field :sku, class: "input" %>
  </div>

  <div class="control">
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, class: "input" %>
  </div>

  <div class="control">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "input", placeholder: "Please Enter Description", rows: 3 %>
    
  </div>

  <div class="control">
    <%= form.label :image, style: "display: block" %>
    <%= form.text_field :image, class: "input" %>
  </div>

  <div class="control mt-4">
    <%= form.submit class: "button is-primary" %>
  </div>
<% end %>
